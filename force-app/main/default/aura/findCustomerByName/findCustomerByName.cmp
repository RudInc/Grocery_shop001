<aura:component controller="customerController">
    <aura:attribute name="customers" type="Grocery_Customer__c[]"/>
    <aura:attribute name="columns" type="List"/>
    <aura:attribute name="customerName" type="String" default=""/>
    <aura:handler name="init" value="{!this}" action="{!c.onInit}"/>
    <div>
        <lightning:input  name="customerNameInput" type="text" label="Enter customer name" value="{!v.customerName}"/>
        <lightning:button variant="Brand" label="Search" onclick="{!c.clickSearch}"/>
    </div>
    <div class="slds-box slds-theme_default">
        <lightning:datatable    
            keyField="Id"
            data="{!v.customers}"
            columns="{!v.columns}"                    
        />
    </div>

</aura:component>	
